<%- include('./partials/header')%>
      

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Update Post</h1>

                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Update Post</h6>
                        </div>
              
                        <div class="card-body">
                            <div class="table-responsive">
                              <form action="/admin/blog/<%=post._id%>/edit" method="post" >

                                <div class="form-group">
                                    <label for="exampleFormControlSelect1">Categories</label>
                                    <select class="form-control" id="exampleFormControlSelect1" name="category_id">
                                        <% categories.forEach(function(category){%>
                                            <option value="<%=category._id%>"><%=category.name%></option>
                                        <%})%>
                                    </select>
                                </div>
                                    
                                <div class="form-group">
                                    <label for="exampleInputEmail2">Title : </label>
                                    <input type="text" name="title" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp" value="<%=post.title%>">
                                </div>

                              
                                  <div class="form-group">
                                      <textarea name="content" id="editor1" rows="10" cols="80">
                                        <%=post.content%>
                                    </textarea>
                                  </div>

                                  <div>
                                      <input type="text" name="tags" class="form-control" value="<%=post.tags%>">
                                  </div>

                                 
                                <div class="form-group" >
                                    <button type="submit" class="btn btn-success">Update Post</button>
                                </div>
                               
                              </form>  
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
<%- include('./partials/footer')%>