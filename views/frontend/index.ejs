<%- include('./partials/header.ejs')%>
                <!-- Container -->
                    <main class="ms-container">

                        <!-- Hero area -->
                        <%- include('./partials/container.ejs')%>

                        <!-- /Hero area -->

                        <!-- Works Grid -->
                            <section class="ms-section">

                            <!-- Sort -->
                                <ul class="filtr-btn">
                                    <li data-filter="*" class="active"><h6 class="ms-btn">all</h6></li>
                                    <%categories.forEach(function(category){%>
                                        <li data-filter=".<%=category.name%>"><h6 class="ms-btn"><%=category.name%></h6></li>

                                    <%})%>
                                   
                                </ul>
                            <!-- /Sort -->
                            
                            <!-- Grid -->
                                <div class="ms-section__block ms-grid">
                                <div class="col-md-1 col-xs-12 grid-sizer"></div>

                                <!-- Work Item -->
                                <%works.forEach(function(work){%>

                                    <div class="grid-item anime-item work-item col-md-6 col-xs-12 <%work.category.forEach(function(cat){%>
                                        <%=cat.name%>
                                        <%})%>">
                                        <a href="/work/<%=work._id%>" class="box work-image" data-type="page-transition">
                                            <div class="box-cover">
                                                <div class="box-img" style="background-image: url(<%if(!work.images.cover){%>assets/images/works/pl-md.jpg<%}else{%>/<%=work.images.cover[0].filename%><%}%>)"></div>
                                                <div class="box-hover"></div>
                                            </div>
                                        </a>
                                        <a href="work-single-page.html" data-type="page-transition">
                                            <div class="work-info">
                                                <div class="box-inner">
                                                    <span class="box-inner__cat">
                                                        <%work.category.forEach(function(cat){%>
                                                        <%=cat.name%>
                                                        <%})%></span>
                                                    <h4 class="box-inner__title"><%=work.title%></h4>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                <!-- /Work Item -->

                                <%})%>



                            </div>
                            <!-- Grid -->
                            <div class="ms-section__block ms-align-center">
                                <a href="#" class="ms-btn__square" data-type="page-transition">load more</a>
                            </div>
                            </section>
                        <!-- /Works Grid -->

                        <!-- Back to top button -->
                        <a href="#" class="back-top"><i class="material-icons">arrow_upward</i></a>
                    </main>
                <!-- /Container --> 

                <%- include('./partials/footer.ejs')%>


            </div>
        <!-- /Wrapper -->
    <!-- JS -->
    <!-- jquery-2.1.3.min js -->
        <script src='assets/js/jquery-3.2.1.min.js'></script>
    <!-- Plugins -->
        <script src='assets/js/plugins.min.js'></script>       
    <!-- Main js -->
        <script src="assets/js/main.js"></script>
    </body>
</html>